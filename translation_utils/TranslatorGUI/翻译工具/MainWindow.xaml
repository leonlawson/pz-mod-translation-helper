<Window x:Class="翻译工具.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:翻译工具"
        mc:Ignorable="d"
        Title="翻译工具" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
            <Label Content="翻译文件路径:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPath" Width="520" Margin="6,0,6,0" />
            <Button x:Name="btnBrowse" Content="浏览" Width="60" Click="btnBrowse_Click" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,10" HorizontalAlignment="Left">
            <Button x:Name="btnInit" Content="初始化" Width="100" Margin="0,0,10,0" Click="btnInit_Click" />
            <Button x:Name="btnSync" Content="同步" Width="100" Margin="0,0,10,0" Click="btnSync_Click" />
            <Button x:Name="btnStart" Content="开始翻译" Width="100" Margin="0,0,10,0" Click="btnStart_Click" />
            <Button x:Name="btnCommit" Content="提交" Width="100" Click="btnCommit_Click" />
        </StackPanel>

        <TextBox x:Name="txtOutput" Grid.Row="2" Margin="0,6,0,0" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True" />

    </Grid>
</Window>
